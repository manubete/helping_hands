<script>
  $(document).ready(function(){
    $('.views-field-phone').each(function(){
      var string = $(this).html();
      $(this).html(string.substring(0,3) + '-' + string.substring(3,6) + '-' + string.substring(6,10))
    });
  });

</script>

<div class="overflowBox">
    <% if flash[:notice] %>
          <div class="signup"><%= flash[:notice] %></div>
          <% end %>

    <div class="orgBox">
      <header class="reqHead" style="margin: 2% auto 5% auto; text-align: center;"><p class="aP"><%= @organization.name.titleize %></p> </header>

      <div class="profileImg">
        <%= cl_image_tag(@organization.avatar_url) %><br>
      </div>

      <ul class="account">
        <li>
          <div class="fill_label">
            <label for="name">Description:</label>
          </div>

          <div class="fill_p">
          <p class="orgDes"><%= @organization.description %> </p>
          </div>

        </li>

        <li><hr></li>

        <li>
          <div class="fill_label">
            <label for="name">Address:</label>
          </div>

          <div class="fill_p">
            <p><%= @organization.address %></p>
            <p><%= @organization.city %></p>
          </div>

        </li>

        <li><hr></li>

        <li>
          <div class="fill_label">
            <label for="name">Phone Number:</label>
          </div>
          <div class="fill_p">
            <p class="views-field-phone"><%= @organization.phone_number %> </p>
          </div>

        </li>

        <li><hr></li>

        <li>
          <div class="fill_label">
            <label for="name">E-mail:</label>
          </div>
          <div class="fill_p">
            <p><%= @organization.email %></p>
          </div>
        </li>

        <li><hr></li>

        <li>
          <div class="fill_label">
            <label for="name">Website:</label>
          </div>
          <div class="fill_p">
            <p><%= @organization.website_url %></p>
          </div>
        </li>

        <li><hr></li>
            <%= link_to "Edit Profile", edit_organization_path(session[:organization_id]), :class => "tfbutton" if session[:organization_id] %><br><br>
      </ul>
    </div>

    <div class="reqAcctBox" style="margin-top: 2%";>
      <div class="reqAcctBox_box">
        <div>
          <%= link_to "Make New Request", new_request_path, :class => "tfbutton" if session[:organization_id] %>

        </div>

        <header class="reqHead" style="margin: 2% auto 2% auto; text-align: center;">Active Requests</header>

        <div class="reqInner">
          <nav class="menu">
            <% @requests.each do |request| %>
            <ul class="parent-menu">
              <li>
                <div class="acc_reqMainContent">
                  <strong><%= link_to "#{request.target_resource_count} #{request.resource}", request_path(request.id) if request.end_date.nil? || request.end_date >= Date.today %></strong>
                  <p><%= link_to "#{request.address}", request_path(request.id) if request.end_date.nil? || request.end_date >= Date.today %></p>
                </div>
                <div class="acc_reqDate" style="float: right;"><%= "End Date: #{request.end_date}" if !request.end_date.nil? && request.end_date >= Date.today %></div>
                <div class="acc_reqDate" style="float: right;"><%= "End Date: indefinite" if request.end_date.nil?  %></div>
                <hr></hr>
              </li>
            </ul>
            <% end %>
          </nav>
            <% if @requests.size == 0 %>
              <p> No requests active </p>
            <% end %>

        </div>

      </div>
      <div class="reqAcctBox_box2">
        <header class="reqHead" style="margin: 2% auto 2% auto; text-align: center;">Request History</header>

        <div class="reqInner">

          <nav class="menu">
             <% @requests.each do |request| %>
            <ul class="parent-menu">

            <li>

                <div class="acc_reqMainContent">
                  <strong><%= link_to "#{request.target_resource_count} of #{request.resource}", request_path(request.id) if !request.end_date.nil? && request.end_date < Date.today  %></strong>
                  <p><%= link_to "#{request.address}", request_path(request.id) if !request.end_date.nil? && request.end_date < Date.today  %></p>
                </div>
                <div style="float: right;">
                  <%= "Finished at #{request.end_date}" if !request.end_date.nil? && request.end_date < Date.today %>
                </div>
                <div class="acc_reqDate" style="float: right;"><%= "End Date: #{request.end_date}" if !request.end_date.nil? && request.end_date > Date.today %></div>
                <div class="acc_reqDate" style="float: right;"><%= "End Date: indefinite" if request.end_date.nil?  %></div>
                <hr></hr>
              </li>
            </ul>
            <% end %>

            <% if @requests.size == 0 %>
              <p> No requests in history </p>
            <% end %>

          </nav>
        </div>
      </div>
    </div>

    <div class="placeholderBox">
    </div>
  </div>
