  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'jasmine', '~> 2.0.1'
