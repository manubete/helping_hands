<div class="box" style="width: 30em">



        <%= form_tag sessions_path do %>

        <ul>
          <li>
            <label class="login_label" for="username">Email </label>
            <p><%= text_field_tag :email, params[:email] %></p>
          </li>
          <li>
            <label class="login_label" for="password">Password</label>
            <p><%= password_field_tag :password, params[:password] %></p>
          </li>
          <li>
            <p style="margin-left: 10em; text-decoration: underline;"><%= link_to "forgot your password?", new_password_reset_path %></p>
          </li>
        </ul>

          <%= submit_tag 'Log In', :class => 'tfbutton_login' %>


        <% end %>

    </div>