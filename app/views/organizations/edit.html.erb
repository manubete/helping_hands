<div class="overflowBox" style="margin: 3% auto 5% auto; width: 80%;">

    <!-- form box -->
    <div class="box" style="float: right; width: 40%;">
      <%= form_for @organization do |f| %>
        <% if @organization.errors %>
          <div>
            <ul>
              <% for message in @organization.errors.full_messages %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <ul class="longSign">

        <li>
          <label class="form_label" for="name">*Name: <%= f.text_field :name, :placeholder => "ie 'Helper Hank Charity'" %></label>
        </li>
        <li>
          <label class="form_label" for="city">*City: <%= f.text_field :city, :placeholder => "ie 'San Francisco'" %></label>
        </li>
          <li>
      <label class="form_label" for="address">*Address: <%= f.text_field :address, :placeholder => "ie 637 15th Street" %></label>
    </li>
     <li>
      <label class="form_label" for="operation_days">*Operation Days: <%= f.text_field :operation_days, :placeholder => "ie Monday - Thursday" %></label>
    </li>
    <li>
      <label class="form_label" for="operation_hours">*Operation Hours: <%= f.text_field :operation_hours, :placeholder => "ie 9am - 5pm, 9am - 4pm on Thursdays" %></label>
    </li>
        <li>
          <label class="form_label" for="phone">*Phone: <%= f.telephone_field :phone_number, :placeholder => "ie '646-832-08394'" %></label>
        </li>
        <li>
          <label class="form_label" for="email">*Email: <%= f.email_field :email, :placeholder => "ie 'name@company.com'" %></label>
        </li>
        <li>
          <label class="form_label" for="website">*Website: <%= f.text_field :website_url, :placeholder => "ie 'www.handyhank.com'" %></label>
        </li>
        <li>
          <label class="form_label" for="linked_in">LinkedIn: <%= f.text_field :linked_in_url, :placeholder => "ie 'linkedin.com/handyhank'" %></label></li>
        <li>
          <label class="form_label" for="facebook">Facebook: <%= f.text_field :facebook_url, :placeholder => "ie 'facebook.com/handyhank'" %></label></li>
        <li>
          <label class="form_label" for="username">*Username <%= f.text_field :username, :placeholder => "ie 'HandyHank2001'" %></label>
        </li>
        <li>
          <label class="form_label" for="password">*Password: <%= f.password_field :password, :placeholder => "ie 'SecretPas$word9'" %></label>
        </li>
        <li>
        </li>
      </ul>
      <div class="formButton">
          <%= f.submit 'Save Changes', :class => 'tfbutton' %>
      </div>
      <% end %>

    </div>

    <!-- photo and description box -->
    <div class="box" style="float: left; width 40%;">
      <div class="proPhoto">
        <img src="/assets/salvationArmy.jpg" height="100%">
      </div>
      <div class="photoButton">

        <!--make this real button-->
        <button class="tfbutton">Edit Photo</button>
      </div>

      <div style="clear: both;">
        <label for="description">Description:</label>
        <form style="margin-bottom: 2em;">
            <textarea class="desRequest" rows="10" cols="50" placeholder="The Salvation Army, an international movement, is an evangelical part of the universal Christian church. Its message is based on the Bible. Its ministry is motivated by the love of God. Its mission is to preach the gospel of Jesus Christ and to meet human needs in His name without discrimination."></textarea><br />
        </form>
      </div>
        <!--make this real button-->
        <button class="tfbutton">Save Description</button>
    </div>

  </div>
