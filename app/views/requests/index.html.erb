<div id="needsBox">
  <h2>Find organizations in need:</h2>


      <% if flash[:notice] %>
          <div class="signup"><%= flash[:notice] %></div>
          <% end %>

      <%= form_tag requests_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
      <% end %>

        <div class = "sorting_category"><%= sortable "organization" %></div>
        <div class = "sorting_category"><%= sortable "resource_count", "Quantity" %></div>
        <div class = "sorting_category"><%= sortable  "resource", "Resource Needed" %></div>

  <div class="request">
    <ul>
      <% @requests.each do |request| %>
        <li><%= link_to "#{request.organization} needs #{request.resource_count} #{request.resource} ", request_path(request) %></li>
      <% end %>
    </ul>
  </div>
</div>
