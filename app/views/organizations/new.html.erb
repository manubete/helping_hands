<div class="fillBox" style="padding: 3% 3% 3% 3%; margin: 2% auto 0 auto; width: 40%;">

        <% if flash[:notice] %>
          <div class="error"><%= flash[:notice] %></div>
          <% end %>
        <%= form_for @organization do |f| %>

        <header class="fulfilled" style="margin-bottom: 5%;">Make an Account</header>
        <p style="text-align: center;">*Required Fields</p>
        <ul class="longSign">
          <li>
            <label class="form_label" for="name">*Name: <%= f.text_field :name, :placeholder => "ie Helper Hank Charity" %></label>
          </li>
          <li>
            <label class="form_label" for="city">*City: <%= f.text_field :city, :placeholder => "eg San Francisco" %></label>
          </li>
          <li>
            <label class="form_label" for="phone">*Phone: <%= f.text_field :phone_number, :placeholder => "eg 646-832-08394" %></label>
          </li>
          <li>
            <label class="form_label" for="email">*Email: <%= f.text_field :email, :placeholder => "eg name@company.com" %></label>
          </li>
          <li>
            <label class="form_label" for="website">*Website: <%= f.text_field :website_url, :placeholder => "eg www.handyhank.com" %></label>
          </li>
          <li>
            <label class="form_label" for="linked_in">*LinkedIn: <%= f.text_field :linked_in_url, :placeholder => "eg www.linked_in.com/handyhank" %></label>
          </li>
          <li>
            <label class="form_label" for="facebook">*Facebook: <%= f.text_field :facebook_url, :placeholder => "eg www.facebook.com/handyhank" %></label>
          </li>
          <li>
            <label class="form_label" for="username">*Username <%= f.text_field :username, :placeholder => "eg handyhank201" %></label>
          </li>
          <li>
            <label class="form_label" for="password">*Password: <%= f.password_field :password, :placeholder => "eg secretpassword909" %></label>
          </li>
          <li><%= f.submit 'Register', :class => 'tfbutton' %></li>
        </ul>

        <% end %>

    </div>