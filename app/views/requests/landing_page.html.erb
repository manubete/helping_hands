<div class="adjustBox">
  <div class="landBox">
       <% if flash[:notice] %>
          <div class="error"><%= flash[:notice] %></div>
        <% end %>
    <div class="logoBig">
      <img class="logo-img" src="/assets/ripple_logo2.PNG">
    </div>
    <p>See what your community needs</p>
      <%= link_to "Sign Up", { controller: "sessions", action: "user_type_confirmation"}, :class => "tfbutton" unless session[:organization_id] || session[:donor_id] %>


    <%= link_to "Log In",{ controller: "sessions", action: "user_type_login_confirmation" }, :class => "tfbutton" unless session[:organization_id] || session[:donor_id] %>

    <% if !session[:organization_id] && !session[:donor_id] %>
      <p>Or start searching</p>
    <% else %>
      <p>Welcome back!</p>
    <% end %>

     <%= form_tag requests_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search], :class => 'tftextinput' %>
          <%= submit_tag "Search", :class => 'tfbutton_search',:name => nil %>

    <%= link_to "Browse",{ controller: "requests", action: "index" }, :class => "tfbutton" %><br>
      <% end %>
  </div>
</div>
